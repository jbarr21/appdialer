<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialer_sheet_height"
    android:background="?colorSurface"
    android:elevation="@dimen/dialer_sheet_elevation"
    app:elevation="@dimen/dialer_sheet_elevation"
    app:behavior_peekHeight="@dimen/dialer_sheet_peek_height"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/dialer_sheet_handle"
        android:layout_width="@dimen/dialer_sheet_handle_width"
        android:layout_height="2dp"
        android:background="?colorOnSurface"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/t9_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="48dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/t9_bottom_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_dialer" />

    <include layout="@layout/view_color_buttons" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/color_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="blue_button,red_button,yellow_button,green_button,gray_button" />

</androidx.constraintlayout.widget.ConstraintLayout>

