<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/blue_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/color_launcher_dot"
        android:clickable="true"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/red_button" />

    <ImageView
        android:id="@+id/red_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/color_launcher_dot"
        android:clickable="true"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/blue_button"
        app:layout_constraintRight_toLeftOf="@+id/yellow_button" />

    <ImageView
        android:id="@+id/yellow_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/color_launcher_dot"
        android:clickable="true"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/red_button"
        app:layout_constraintRight_toLeftOf="@+id/green_button" />

    <ImageView
        android:id="@+id/green_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/color_launcher_dot"
        android:clickable="true"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/yellow_button"
        app:layout_constraintRight_toLeftOf="@+id/gray_button" />

    <ImageView
        android:id="@+id/gray_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/color_launcher_dot"
        android:clickable="true"
        app:backgroundTint="#888888"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/green_button"
        app:layout_constraintRight_toRightOf="parent" />

</merge>